@model IEnumerable<Library_Management_System.Models.Entities.Category>

@{
    ViewData["Title"] = "Get_all";
}


<p>
    <a href="~/Category/NEW" class="btn btn-primary">Create New</a>
</p>
@if (ViewData["deleted"] != null)
{
    <p class="text-success">@ViewData["deleted"]</p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>Edit</th>
            <th>Details</th>
            <th>Delete</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                    <a href="~/Category/Edit?id=@item.Id" class="btn btn-success">Update</a>
            </td>
            <td>
                    <a href="~/Category/Get?id=@item.Id" class="btn btn-secondary">Details</a>
            </td>
            <td>
                    <a href="~/Category/Delete?id=@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
